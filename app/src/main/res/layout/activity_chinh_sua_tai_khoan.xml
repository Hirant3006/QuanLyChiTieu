<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khoa1.myapplication.ChinhSuaTaiKhoan">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/toolbar">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview_bottom_border"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageTaiKhoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/activity_icon"/>
                <TextView
                    android:id="@+id/tvChonHinh"
                    android:layout_toRightOf="@id/imageTaiKhoan"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Chọn Hình"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/headerChiTietTk"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview_bottom_border"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageIconTieuDe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/note_icon"/>
                <EditText
                    android:id="@+id/tenTaiKhoan"
                    android:layout_toRightOf="@id/imageIconTieuDe"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:background="@android:color/transparent"
                    android:hint="Tên Tài Khoản"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/headerChiTietTk"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview_bottom_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageIconTienDu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wallet_icon"/>
                <EditText
                    android:id="@+id/soDu"
                    android:layout_toRightOf="@id/imageIconTienDu"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:hint="Số dư"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/headerChiTietTk"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview_bottom_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageIconTienNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wallet_icon"/>
                <EditText
                    android:id="@+id/soNo"
                    android:layout_toRightOf="@id/imageIconTienNo"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:hint="Số nợ"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

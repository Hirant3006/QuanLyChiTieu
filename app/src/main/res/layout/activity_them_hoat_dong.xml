<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khoa1.myapplication.ThemHoatDong">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@id/toolbar">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="0"
        android:textSize="35sp"
        android:textColor="#2962FF"
        android:padding="10dp"
        android:background="@drawable/custom_textview_bottom_border"/>
    <RelativeLayout
        android:layout_below="@id/headerChiTietTk"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_textview_bottom_border"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageIconLoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_icon"/>
        <TextView
            android:id="@+id/tvChonLoaiHoatDong"
            android:layout_toRightOf="@id/imageIconLoai"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Chọn Loại"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/headerChiTietTk"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_textview_bottom_border"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageIconTieuDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/note_icon"/>
        <EditText
            android:layout_toRightOf="@id/imageIconTieuDe"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:background="@android:color/transparent"
            android:hint="Tiêu Đề"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/headerChiTietTk"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_textview_bottom_border"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageIconVi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wallet_icon"/>
        <TextView
            android:layout_toRightOf="@id/imageIconVi"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textSize="25sp"

            android:text="Chọn Tài Khoản"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/headerChiTietTk"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_textview_bottom_border"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/headerChiTietTk"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_textview_bottom_border"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@drawable/custom_textview_bottom_border"
            android:gravity="left"
            android:padding="10dp"
            android:hint="Nội dung"
            android:lines="5"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/headerChiTietTk"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/camera_icon"
/>
    </RelativeLayout>
</LinearLayout>
</ScrollView>
</RelativeLayout>
